<%= form_for @build do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :runes %>
<%= f.select :runes, options_for_select(["Domination", "Precision", "Sorcery", "Resolve", "Inspiration"])%><br>
<%= f.label :items %>
<%= f.select :items, options_for_select(["Crit", "Lethality", "Ability", "Tank", "Support"]) %><br>
<%= f.label :description %><br>
<%= f.text_area :description %><br>
<%= f.submit "Create Build" %>
<% end %>